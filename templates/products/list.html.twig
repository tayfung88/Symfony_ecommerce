{% extends 'base.html.twig' %}

{% block title %}Add Products !{% endblock %}

{% block stylesheets %}
    {# Inclure les fichiers CSS nécessaires pour DataTables #}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
{% endblock %}

{% block body %}
<div class="m-5">
	<div class="mb-3">
        <a href="{{ path('app_add_products') }}" class="btn btn-primary">Add a new product</a>
    </div>
    <table id="productsTable" class="table table-hover">
        <thead>
            <tr>
                <th>Category</th>
                <th>Name</th>
                <th>Price</th>
                <th>Promotion</th>
                <th>Discount</th>
                <th>Image</th>
                <th>Edit Product</th>
                <th>Delete Product</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.Category.name }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.promotion }}</td>
                    <td>{{ product.discount }}</td>
                    <td><img src="{{ product.image }}" style="object-fit: cover; width: 100%; height: 50px;"></td>
                    <td>
                        <a href="{{ path('app_edit_products', {id: product.id}) }}">Edit</a>
                    </td>
                    <td>
                        <a href="{{ path('app_delete_products', {id: product.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% block javascripts %}
    {# Inclure les fichiers JavaScript nécessaires pour DataTables #}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function() {
            // Initialiser DataTables sur la table avec l'ID "productsTable"
            $('#productsTable').DataTable();
        });
    </script>
{% endblock %}
{% endblock %}


